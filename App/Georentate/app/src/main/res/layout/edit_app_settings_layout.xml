<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Privacy policy"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_privacy_policy_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Privacy policy.."
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:layout_marginTop="4dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit the description"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_about_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="The app is about.."
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:layout_marginTop="4dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit conditions"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_conditions_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Conditions include.."
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:layout_marginTop="4dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit links"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_links_fb_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Faceoobk"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp" />

                <EditText
                    android:id="@+id/edit_links_web_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Web"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/cancel_edit_button_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/apply_edit_button_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="apply changes"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/close_settings_dialog_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_2_24dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>