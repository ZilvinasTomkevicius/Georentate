<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_marginBottom="1dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/userLogin_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/userLogin_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_toRightOf="@id/userLogin_static"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="10dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/expand_more_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more_yellow_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_container_login">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_marginBottom="1dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/userEmail_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/userEmail_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_toRightOf="@id/userEmail_static"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="10dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/expand_more_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_expand_more_yellow_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_container_email">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_marginBottom="1dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/userStartDate_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start date"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/userStartDate_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_toRightOf="@id/userStartDate_static"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="10dp"
                android:clickable="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_border"
            android:layout_marginBottom="1dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/userPoints_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textSize="18sp"
                android:padding="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/userPoints_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@id/userPoints_static"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="10dp"
                android:clickable="true"/>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/logOff_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_exit_to_app_black_24dp"/>

</RelativeLayout>