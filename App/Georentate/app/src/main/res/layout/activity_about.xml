<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/about_privacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privatumo politika"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/expand_more_PP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_yellow_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_container_PP">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/about_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apie"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/expand_more_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_yellow_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_container_about">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/about_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Naudojimosi sÄ…lygos"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/expand_more_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_yellow_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_container_conditions">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/about_version_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versija"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/userEmail_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versija"
                    android:layout_toRightOf="@id/about_version_static"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>