<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change the checkpoint name"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_checkpoint_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter checkpoint name.."
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:layout_marginTop="4dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkpoint hint"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_checkpoint_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Write hint"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:layout_marginTop="4dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan string"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_checkpoint_scanString"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Scan string"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_border"
                android:layout_marginTop="4dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points"
                    style="@style/CustomDialogTextStyle"/>

                <EditText
                    android:id="@+id/edit_checkpoint_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Points"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:fontFamily="sans-serif-light"
                    android:inputType="number"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/cancel_edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/apply_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="apply changes"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/close_edit_dialog_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_black_2_24dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>