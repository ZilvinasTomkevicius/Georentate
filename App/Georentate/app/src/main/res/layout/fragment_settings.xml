<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/privacy_policy_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/settings_privacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy policy"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/expand_more_PP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_yellow_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_container_PP">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/settings_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/expand_more_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_yellow_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_container_about">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/conditions_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/settings_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and conditions"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/expand_more_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_more_yellow_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandable_container_conditions">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/settings_version_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:id="@+id/settings_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0"
                    android:layout_toRightOf="@id/settings_version_static"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fb_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/settings_fb_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="#2196f3"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/go_to_fb_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/web_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:layout_marginBottom="1dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/settings_web_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web"
                    android:textSize="18sp"
                    android:padding="15dp"
                    android:textColor="@color/primaryText"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:id="@+id/go_to_web_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>